<Window x:Class="Diary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Diary" Height="500" Width="900"
        Background="#f4f6f9">

	<Window.Resources>
		<!-- Rounded Button Style -->
		<Style x:Key="RoundedButtonStyle" TargetType="Button">
			<Setter Property="Background" Value="#3498db"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Padding" Value="8,4"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
							<ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<!-- Rounded TextBox Style -->
		<Style TargetType="TextBox">
			<Setter Property="BorderBrush" Value="#2c3e50"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Padding" Value="6"/>
			<Setter Property="Background" Value="White"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="TextBox">
						<Border CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
							<ScrollViewer x:Name="PART_ContentHost"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="220"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Sidebar -->
		<StackPanel Background="#2c3e50" Width="220" VerticalAlignment="Stretch">
			<TextBlock Text="📖 My Diary"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="20,20,0,20"/>

			<TextBlock Text="Calendar"
                       Foreground="#bdc3c7"
                       FontSize="14"
                       Margin="20,10,0,5"/>

			<!-- Calendar -->
			<Calendar x:Name="calendar"
                      Margin="10"
                      SelectedDatesChanged="Calendar_SelectedDatesChanged"/>
		</StackPanel>

		<!-- Main Content -->
		<StackPanel Grid.Column="1" Margin="20">
			<!-- Date Display -->
			<TextBlock x:Name="lblDate"
                       Text="{Binding SelectedDate, ElementName=calendar, StringFormat='{}{0:MMMM d, yyyy}'}"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#2c3e50"
                       Margin="0,0,0,20"/>

			<!-- Title -->
			<TextBox x:Name="txtTitle"
                     Height="35"
                     Margin="0,0,0,10"/>

			<!-- Content -->
			<TextBox x:Name="txtContent"
                     Height="250"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>

			<!-- Action Buttons -->
			<StackPanel Orientation="Horizontal" Margin="0,20,0,0">
				<Button Content="💾 Save"
                        Width="100"
                        Height="35"
                        Style="{StaticResource RoundedButtonStyle}"
                        Click="Save_Click"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>